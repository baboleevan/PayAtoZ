<div id="wrapper">
    <div id="login_title">
        <h5>
            Edit</h5>
    </div>
    <div id="container">
        <div id="inner_content">
            <div id="login_form">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <legend>UserWallet</legend>
                        @Html.HiddenFor(model => model.UserWalletId)

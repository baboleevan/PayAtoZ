@model EasyPay.Models.ServiceOperatorPlan

@{
    ViewBag.Title = "Create";
}

<div id="wrapper">
    <div id="login_title">
        <h5>Create</h5>
    </div>
    <div id="container">
        <div id="inner_content">
            <div id="login_form">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <legend>ServiceOperatorPlan</legend>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ServiceOperatorId, "ServiceOperator")
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("ServiceOperatorId", String.Empty)
                            @Html.ValidationMessageFor(model => model.ServiceOperatorId)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.PlanName)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.PlanName)
                            @Html.ValidationMessageFor(model => model.PlanName)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Validity)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Validity)
                            @Html.ValidationMessageFor(model => model.Validity)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Description)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Price)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Price)
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.StateId, "State")
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("StateId", String.Empty)
                            @Html.ValidationMessageFor(model => model.StateId)
                        </div>

                        <p>
                            <input type="submit" value="Create" />
                        </p>
                    </fieldset>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>

    </div>

</div>